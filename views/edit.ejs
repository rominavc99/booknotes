<%- include('partials/header.ejs'); -%>

    <div class="container ">
        <header class="d-flex justify-content-center py-3">
            <ul class="nav nav-pills">
                <li class="nav-item"><a href="#" class="nav-link active" aria-current="page">Home</a></li>
                <li class="nav-item"><a href="#" class="nav-link">Documentation</a></li>
                <li class="nav-item"><a href="#" class="nav-link">Github Rep</a></li>
            </ul>
        </header>
    </div>

    <div class="px-4 py-5 my-5 text-center bg-body-tertiary">
        <img class="d-block mx-auto mb-4" src="/assets/images/dinostudio.png" alt="" width="200" height="130">
        <h1 class="display-5 fw-bold text-body-emphasis">Romina's reading list (create view)</h1>
        <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">Admin view that allows the creator (me) to add books into the database, so they can be displayed on the main page. In order to access this page you need to go through the login secuence.</p>
            
        </div>
    </div>

   

    <div class="container">
        
            <form method="POST" action="/edit">
                <input type="hidden" name="id" value="<%= book.id %>">
                <div class="row mb-3">
                    <label for="inputTitle" class="col-sm-2 col-form-label">Title</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputTitle" name="title" value="<%= book.title %>">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputAuthor" class="col-sm-2 col-form-label">Author</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputAuthor" name="author" value="<%= book.author %>">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="olid" class="col-sm-2 col-form-label">OLID Label</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="olid" name="olid" value="<%= book.olid %>">
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Review</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" aria-label="With textarea" name="review"><%= book.review %></textarea>
                    </div>
                </div>
                <fieldset class="row mb-3">
                    <legend class="col-form-label col-sm-2 pt-0">Genere</legend>
                    <div class="col-sm-10">
                    <div class="form-check">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="novel" name="novel" value="true" <% if (book.novel) { %>checked<% } %>>
                            <label class="form-check-label" for="novel">Novel</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="shortStory" name="short_story"  value="true" <% if (book.short_story) { %>checked<% } %>>
                            <label class="form-check-label" for="shortStory">Short Story</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="drama" name="drama"  value="true" <% if (book.drama) { %>checked<% } %>>
                            <label class="form-check-label" for="drama">Drama</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="suspense" name="suspense"  value="true" <% if (book.suspense) { %>checked<% } %>>
                            <label class="form-check-label" for="suspense">Suspense</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="fiction" name="fiction"  value="true" <% if (book.fiction) { %>checked<% } %>>
                            <label class="form-check-label" for="fiction">Fiction</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="sliceOfLife" name="slice_of_life"  value="true" <% if (book.slice_of_life) { %>checked<% } %>>
                            <label class="form-check-label" for="sliceOfLife">Slice of life</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="terror" name="terror"  value="true" <% if (book.terror) { %>checked<% } %>>
                            <label class="form-check-label" for="terror">Terror</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="fantasy" name="fantasy"  value="true" <% if (book.fantasy) { %>checked<% } %>>
                            <label class="form-check-label" for="fantasy">Fantasy</label>
                        </div>
                    </div>
                    </div>
                </fieldset>
               
                <div class="input-group mb-3">
                
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Rating</label>
                    <select class="form-select" id="rating" name="rating" required>
                        <option selected>Choose...</option>
                        <option value="Bad" <% if (book.rating === 'Bad') { %>selected<% } %>>Bad</option>
                        <option value="Nothing impressive" <% if (book.rating === 'Nothing impressive') { %>selected<% } %>>Nothing impressive</option>
                        <option value="Good" <% if (book.rating === 'Good') { %>selected<% } %>>Good</option>
                        <option value="Loved it!" <% if (book.rating === 'Loved it!') { %>selected<% } %>>Loved it!</option>
                        <option value="Favorite book" <% if (book.rating === 'Favorite book') { %>selected<% } %>>Favorite book</option>
                
                    </select>
                </div>
                <div class="container d-flex justify-content-end">
                   
                    <button type="submit" class="btn btn-success m-2">Guardar</button>
                
                </div>
                
            </form>
            <div class="container d-flex justify-content-end">
                <a href="/indexAdmin" class="btn btn-danger m-2">Cancelar</a>

            </div>
            
            
        </div>        
        
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <%- include('partials/footer.ejs'); -%>